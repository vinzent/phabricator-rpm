[Unit]
Description=Phabricator Daemons
# Requires=mariadb.service
# After=mariadb.service

[Service]
Type=forking
# Phabricator requires git-http-backend in PATH
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/usr/libexec/git-core"
ExecStart=/opt/phab/phabricator/bin/phd start
ExecStop=/opt/phab/phabricator/bin/phd stop
User=phabricator
UMask=0027
Restart=on-failure

[Install]
WantedBy=multi-user.target
