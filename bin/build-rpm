#!/bin/sh

set -e
set -u
set -o pipefail

RPMDIR=${1:-$(pwd)/RPMS}

cleanup() {
  exitcode=$?

  if [ "$exitcode" != "0" ]; then
    echo "ERROR: unsuccessful exitcode: $exitcode" >&2
  fi

  exit $exitcode
}

trap cleanup EXIT

( 
  cd SOURCES;
  spectool -g ../phabricator.spec
) 

rpmbuild \
  -bb \
  --undefine dist \
  --define "_sourcedir $(pwd)/SOURCES" \
  --define "_rpmdir ${RPMDIR}" \
  phabricator.spec
